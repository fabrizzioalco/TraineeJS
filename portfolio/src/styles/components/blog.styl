@require "../base/colors.styl";
@require "../base/fonts.styl";
@require "../base/units.styl";
@require "../base/container.styl";

/**
 * Mobile / Base Styles
 */
.blog
    background-color: $background_dark

    &__container
        @extend .g-container
        text-align: center
    
    &__title,
    &__date
        color: $text_white
        font-family: $text_font
        text-align: center
        margin: 0

    &__date
        font-size: 0.75rem
        font-weight: 100
        margin-top: 0.5rem

    &__read
        background-color: $background_purple
        border: none
        color: $text_white
        display: inline-block
        font-size: 0.8rem
        font-family: $text_font
        margin-top: $double_margin
        padding: 0.5rem $normal_padding
    
        &:hover
            cursor pointer
            
    &__picture
        height: 15rem
        display: none

    &__header
        text-align: center
        &__text
            margin: 0
            padding: $double_padding
            color: $text_color
            font-family: $text_font
/**
 * Tablet Styles
 */
@media screen and (min-width: $tablet_width)
    .blog
        &__container,
        &__picture
            display: inline-block
            vertical-align: middle
            width: 50%
        
        &__image
            height: 15rem
            object-fit: cover
            width: 100%;
