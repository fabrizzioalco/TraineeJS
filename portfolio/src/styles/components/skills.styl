@require "../base/colors.styl";
@require "../base/fonts.styl";
@require "../base/units.styl";

.skills
    &__container
        background-color: $background_gray
        box-sizing: border-box
        display: flex
        justify-content: space-evenly
        padding: 0 $normal_padding $double_padding $normal_padding
        width: 100%
    
    &__item
        border-radius: 100%
        height: 6rem
        width: 6rem

        &:first-child
            background-image: url("../public/images/rx.png")
            background-repeat: no-repeat
            background-size: cover

        &:nth-child(2)
            background-image: url("../public/images/js.png")
            background-repeat: no-repeat
            background-size: cover

        &:last-child
            background-image: url("../public/images/rn.png")
            background-repeat: no-repeat
            background-size: cover

    &___title
        background-color: $background_gray
        box-sizing: border-box
        padding: $double_padding $normal_padding $normal_padding $normal_padding
        margin: 0

    &__title__text
        color: $text_purple
        display: block
        font-family: $text_font
        margin: 0

@media screen and (min-width $tablet_width)
    .skills
        &___title
            text-align: center

            &__text
                display inline-block